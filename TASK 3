using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            float convertValue;
            int dollarToRubs = 50;
            int hryvnaToRubs = 3;
            int dollarToHryvnas = 27;
            while (true)
            {
                Console.WriteLine("Сколькго у вас рублей");
                float myRubs = Convert.ToSingle(Console.ReadLine());
                Console.WriteLine("Сколько у вас долларов");
                float myDollars = Convert.ToSingle(Console.ReadLine());
                Console.WriteLine("Сколько у вас гривен");
                float myHryvnas = Convert.ToSingle(Console.ReadLine());

                Console.WriteLine("Нажмите 1 чтобы перевести рубли в доллары");
                Console.WriteLine("Нажмите 2 чтобы перевести доллары в рубли");
                Console.WriteLine("Нажмите 3 чтобы перевести рубли в гривны");
                Console.WriteLine("Нажмите 4 чтобы перевести гривны в рубли");
                Console.WriteLine("Нажмите 5 чтобы перевести гривны в доллары");
                Console.WriteLine("Нажмите 6 чтобы перевести доллары в гривны");

                string wayOfConvertation = Console.ReadLine();

                switch (wayOfConvertation)
                {
                    case "1":
                        Console.WriteLine("Сколько вы хотите перевести");
                        convertValue = Convert.ToInt32(Console.ReadLine());
                        if (convertValue > myRubs)
                        {
                            Console.WriteLine("У вас слишком мало рублей для конвертации");
                            break;
                        }
                        myRubs -= convertValue;
                        myDollars += convertValue / dollarToRubs;
                        break;
                    case "2":
                        Console.WriteLine("Сколько вы хотите перевести");
                        convertValue = Convert.ToInt32(Console.ReadLine());
                        if (convertValue > myDollars)
                        {
                            Console.WriteLine("У вас слишком мало долларов для конвертации");
                            break;
                        }
                        myDollars -= convertValue;
                        myRubs += convertValue * dollarToRubs;
                        break;
                    case "3":
                        Console.WriteLine("Сколько вы хотите перевести");
                        convertValue = Convert.ToInt32(Console.ReadLine());
                        if (convertValue > myRubs)
                        {
                            Console.WriteLine("У вас слишком мало рублей для конвертации");
                            break;
                        }
                        myRubs -= convertValue;
                        myHryvnas += convertValue / hryvnaToRubs;
                        break;
                    case "4":
                        Console.WriteLine("Сколько вы хотите перевести");
                        convertValue = Convert.ToInt32(Console.ReadLine());
                        if (convertValue > myHryvnas)
                        {
                            Console.WriteLine("У вас слишком мало гривен для конвертации");
                            break;
                        }
                        myHryvnas -= convertValue;
                        myRubs += convertValue * hryvnaToRubs;
                        break;
                    case "5":
                        Console.WriteLine("Сколько вы хотите перевести");
                        convertValue = Convert.ToInt32(Console.ReadLine());
                        if (convertValue > myHryvnas)
                        {
                            Console.WriteLine("У вас слишком мало гривен для конвертации");
                            break;
                        }
                        myHryvnas -= convertValue;
                        myDollars += convertValue / dollarToHryvnas;
                        break;
                    case "6":
                        Console.WriteLine("Сколько вы хотите перевести");
                        convertValue = Convert.ToInt32(Console.ReadLine());
                        if (convertValue > myDollars)
                        {
                            Console.WriteLine("У вас слишком мало долларов для конвертации");
                            break;
                        }
                        myDollars -= convertValue;
                        myHryvnas += convertValue * dollarToHryvnas;
                        break;
                    default:
                        Console.WriteLine("Вы выбрали хотите переводить что-то не то :) ");
                        break;
                }

                Console.WriteLine($"На ваших кошельках отсалось: {myRubs} рублей, {myDollars} долларов, {myHryvnas} гривен.");
                Console.ReadLine();
                Console.Clear();
            }
            


        }
    }
}
